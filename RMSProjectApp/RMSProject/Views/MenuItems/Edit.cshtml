@model RMSProject.ViewModels.MenuItemsViewData

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MenuItem</h4>
<p>Please fill ensure all details entered are correct.</p>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            @*Passing ID field through*@
            <input asp-for="MenuItem.Id" type="hidden" />
            <input asp-for="NutritionalInformation.Id" type="hidden" />
            <input asp-for="NutritionalInformation.MenuItemId" type="hidden" />

            <div class="MenuItemForm col-md-12">
                <div class="flex-fill">
                    <div class="form-group">
                        <label asp-for="MenuItem.ItemName" class="control-label"></label>
                        <input asp-for="MenuItem.ItemName" class="form-control" placeholder="E.g. Pepperoni Pizza" />
                        <span asp-validation-for="MenuItem.ItemName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.ItemPrice" class="control-label"></label>
                        <input asp-for="MenuItem.ItemPrice" class="form-control" placeholder="Enter a number" />
                        <span asp-validation-for="MenuItem.ItemPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.TypeOfMeal" class="control-label"></label>
                        <select asp-for="MenuItem.TypeOfMeal" class="form-control">
                            <option disabled selected>Select a Meal type...</option>
                            <option value="Starter">Starter</option>
                            <option value="Main">Main</option>
                            <option value="Dessert">Dessert</option>
                            <option value="Side">Side</option>
                            <option value="Drink">Drink</option>
                        </select>

                        <span asp-validation-for="MenuItem.TypeOfMeal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.ItemDescription" class="control-label"></label>
                        <textarea asp-for="MenuItem.ItemDescription" class="form-control" type="text" rows="3" style="resize:none" placeholder="Add a short description describing what the item is."></textarea>
                        <span asp-validation-for="MenuItem.ItemDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MenuItem.ImageUrl" class="form-label"></label>
                        <input asp-for="MenuItem.ImageUrl" class="form-control" type="file" id="formFile">
                        <span asp-validation-for="MenuItem.ImageUrl" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="form-group col-md-6">
                            <label asp-for="NutritionalInformation.Calories" class="control-label"></label>
                            <input asp-for="NutritionalInformation.Calories" class="form-control" placeholder="999" min="0" />
                            <span asp-validation-for="NutritionalInformation.Calories" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="NutritionalInformation.Carbs" class="control-label"></label>
                            <input asp-for="NutritionalInformation.Carbs" class="form-control" placeholder="999" min="0" />
                            <span asp-validation-for="NutritionalInformation.Carbs" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="NutritionalInformation.Sugar" class="control-label"></label>
                            <input asp-for="NutritionalInformation.Sugar" class="form-control" placeholder="999" min="0" />
                            <span asp-validation-for="NutritionalInformation.Sugar" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="NutritionalInformation.Protein" class="control-label"></label>
                            <input asp-for="NutritionalInformation.Protein" class="form-control" placeholder="999" min="0" />
                            <span asp-validation-for="NutritionalInformation.Protein" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="NutritionalInformation.Fats" class="control-label"></label>
                            <input asp-for="NutritionalInformation.Fats" class="form-control" placeholder="999" min="0" />
                            <span asp-validation-for="NutritionalInformation.Fats" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="form-check">
                            <label asp-for="NutritionalInformation.IsVegetarian" class="control-label"></label>
                            <input class="form-check-input" type="checkbox" asp-for="NutritionalInformation.IsVegetarian" class="form-control" />
                            <span asp-validation-for="NutritionalInformation.IsVegetarian" class="text-danger"></span>
                        </div>
                        <div class="form-check">

                            <label asp-for="NutritionalInformation.IsVegan" class="control-label"></label>
                            <input class="form-check-input" type="checkbox" asp-for="NutritionalInformation.IsVegan" class="form-control" />
                            <span asp-validation-for="NutritionalInformation.IsVegan" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <label asp-for="NutritionalInformation.HasNuts" class="control-label"></label>
                            <input class="form-check-input" type="checkbox" asp-for="NutritionalInformation.HasNuts" class="form-control" />
                            <span asp-validation-for="NutritionalInformation.HasNuts" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            @* Temporary space between button div and inputs, to be adjusted in CSS file *@
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
